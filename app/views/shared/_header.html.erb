<div class="header_bg">
  <div class="container-fluid">
    <nav class="navbar header_bg navbar-expand-lg navbar-light">
      <a class="navbar-brand" href=<%= items_path %>><h1 class="coffee_taital1">DinnerDash</h1></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href=<%= items_path %>>Home</a>
          </li>
          <% if session[:user_id] %>
            <li class="nav-item">
              <a class="nav-link" href=<%= logout_path %>>LogOut</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href=<%= user_path(current_user) %>>Profile</a>
            </li>
            <li class="nav-item">
             <a class="nav-link" href="<%=orders_path%>">Orders</a>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link" href=<%= login_path %>>Login</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href=<%= new_user_path %>>SignUp</a>
            </li>
          <% end %>

          <li class="nav-item">
            <a class="nav-link" href="<%= cart_path(@current_cart) %>">Cart</a>
          </li>

        </ul>
        <form action=<%= search_items_path %> method="get" class="mr-auto search-form">
          <select name="category" class="search-select">
            <option value="" disabled selected>Select a Categories</option>
            <% @categories.each do |category| %>
              <option value="<%= category.name %>"><%= category.name %></option>
            <% end %>
          </select>
          <button type="submit" class="search-button">Search</button>
        </form>
      </div>
    </nav>
  </div>
</div>

