  <%= render "shared/header" %>
   <div class="container">
      <div class="row ">
         <% @items.each do |item| %>
            <div class="col-lg-4 col-md-6 col-sm-6">
               <div class="coffee_item">
                 <a href="<%= item_path(item) %>" class="coffee_img img">
                     <% if item.photo.attached? %>
                        <%= image_tag item.photo, class: "card-img-top img-fluid" %>
                     <% else %>
                        <%= image_tag "default.png", class: "card-img-top img-fluid" %>
                     <% end %>
                  </a>
                  <h3 class="types_text"><%= item.title %></h3>
                  <p class="looking_text"><%= item.description %></p>
                  <div class="read_bt">
                    <%= button_to "Add To Cart", order_items_path(item_id: item.id), method: :post, class: "add-to-cart-button" %>
                  </div>
               </div>
            </div>
         <% end %>
      </div>
   </div>
