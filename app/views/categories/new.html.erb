<h2>New Category</h2>

<%= form_with(model: @category, url: categories_path) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="actions">
    <%= form.submit 'Create Category' %>
  </div>
<% end %>

<%= link_to 'Back', categories_path %>
